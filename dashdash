"""

styles_css = """
:root{
  --bg:#0f172a;
  --card:#0b1220;
  --muted:#9aa7bf;
  --accent1:#4f46e5;
  --accent2:#06b6d4;
  --white:#ffffff;
}

*{box-sizing:border-box}
html,body{height:100%}
